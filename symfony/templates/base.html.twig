<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('style.min.css') }}">
    {% endblock %}
    {% block scripts %}{% endblock %}
  </head>
  <body class="document-body">
    <nav class="main-navbar">
      <ul class="list">
        <li class="item -left">
          <a class="link" href="{{ path('homepage') }}">Home</a>
        </li>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <li class="item">
          <a class="link" href="{{ path('unauthenticate') }}">Log out</a>
        </li>
        <li class="item">
          <a class="link" href="{{ path('member_account') }}">My Account</a>
        </li>
        {% else %}
        <li class="item">
            <a class="link" href="{{ path('choose_authenticate') }}">Login</a>
        </li>
        <li class="item">
            <a class="link" href="{{ path('registration_start') }}">Register</a>
        </li>
        {% endif %}
      </ul>
    </nav>
    <main class="main-content">
      <div class="content-wrapper">
        {% block body %}{% endblock %}
      </div>
    </main>
    {% block javascripts %}{% endblock %}
  </body>
</html>
